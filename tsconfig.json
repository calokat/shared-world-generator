{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",          // Use ES modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api",
    "rootDir": "./src/api"
  }
}